<!DOCTYPE html>
<html>
  <head>
    <title>UpChat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-light bg-faded">
      <%= link_to "UpChat", root_path, class: 'navbar-brand' %>
      <ul class="nav navbar-nav">
        <% if current_user %>
          <%= li_link_to "Inbox", incoming_messages_path %>
          <%= li_link_to "Profile", user_path(:current) %>
          <%= li_link_to "Log out #{current_user.email}", logout_path, method: 'delete' %>
        <% else %>
          <%= li_link_to "Sign Up", new_user_path %>
          <%= li_link_to "Sign In", new_session_path %>
        <% end %>
      </ul>
    </nav>
    <%= flash_messages %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
