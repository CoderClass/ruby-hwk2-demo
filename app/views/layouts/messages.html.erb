<% content_for :content do %>
  <div class="row" style="margin-top:20px">
    <div class="col-sm-3">
      <div class="list-group">
        <%= list_item_li_to incoming_messages_path do %>
          Inbox
          <span class="tag tag-default tag-pill float-xs-right"><%= current_user.incoming_messages.size %></span>
        <% end %>
        <%= list_item_li_to sent_messages_path do %>
          Sent
          <span class="tag tag-default tag-pill float-xs-right"><%= current_user.sent_messages.size %></span>
        <% end %>
      </div>
    </div>
    <div class="col-sm-9">
      <%= yield %>
    </div>
  </div>
<% end %>

<%= render file: 'layouts/application' %>
